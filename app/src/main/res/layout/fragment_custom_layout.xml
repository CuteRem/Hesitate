<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hpj.chooser.view.MaxHeightScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="100dp"
            android:textColor="@color/btn_click"
            android:textSize="22sp"
            tools:text="1" />
    </com.hpj.chooser.view.MaxHeightScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/count" />

    <EditText
        android:id="@+id/et_count"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_count"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/options" />

    <EditText
        android:id="@+id/et_options"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:hint="@string/options_hint" />

    <com.hpj.chooser.view.ActionButton
        android:id="@+id/btn_click"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_options"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:background="@drawable/bg_click_btn"
        android:text="@string/btn_text"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</RelativeLayout>